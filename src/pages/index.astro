---
import NavBar from '../components/NavBar.astro';
import DeviceBackground from '../layouts/DeviceBackground.astro';
import PageWrapper from '../layouts/PageWrapper.astro';
---

<PageWrapper title="Home | RevolutionUC Hackathon">
	<!-- Navbar section -->
	<NavBar />
	<!-- Hero section -->
	<DeviceBackground bgtailwind='bg-gradient-to-br from-blue-500 to-purple-500'>
		<div class="flex flex-col items-center justify-center h-full">
			<h1 class="text-4xl font-bold text-white">RevolutionUC</h1>
			<h2 class="text-2xl font-bold text-white">Hackathon</h2>
			<h3 class="text-xl font-bold text-white">March 26-28, 2021</h3>
			<h4 class="text-xl font-bold text-white">University of Cincinnati</h4>
			<a href="/apply" class="px-4 py-2 mt-4 text-lg font-bold text-white bg-blue-500 rounded hover:bg-blue-600">Apply Now</a>
		</div>
	</DeviceBackground>
	<!-- About section -->
	<DeviceBackground bgtailwind='bg-gradient-to-br from-purple-500 to-blue-500'>
		<div class="flex flex-col items-center justify-center h-full">
			<h1 class="text-4xl font-bold text-white">About</h1>
			<p class="px-4 py-2 mt-4 text-lg font-bold text-white">RevolutionUC is a 24-hour hackathon hosted by the Association for Computing Machinery at the University of Cincinnati. We aim to bring together students from all over the world to collaborate and create amazing projects. This year, we are hosting our event virtually, so anyone can participate from the comfort of their own home!</p>
		</div>
	</DeviceBackground>
</PageWrapper>