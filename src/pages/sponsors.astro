---
import ResponsiveNav from "../components/ResponsiveNav.astro";
import HTMLWrapper from "../layouts/HTMLWrapper.astro";
import Footer from "../components/Footer.astro";
---

<HTMLWrapper title="Sponsors">
    <ResponsiveNav current="sponsors" />
    <div class="flex flex-col justify-center items-center mt-24">
        <img 
            src="https://assets.revolutionuc.com/website-images/2023/photos/2x/sponsors.png" 
            alt="RevolutionUC's Schedule" 
            class="w-[760px] max-md:w-11/12 h-[500px] max-md:h-[300px] object-cover pb-8"
            loading="eager"/>
            <h1 class="text-3xl font-extrabold">Sponsors</h1>
    </div>

    <section class="container container--sponsor section mt-24">
        <div class="sponsor-list">

            <h6> Ultimate Tier</h6>
            <div class="flex sponsor-ultimate-tier">
                <a href="https://www.revolutionuc.com" target="_blank noopenner">
                    <img
                      id="{{sponsor.name | slugify}}-image"
                      class="sponsor-diamond"
                      src="{{ sponsor.image }}"
                      alt="Diamond Tier logo" />
                </a>
            </div>

            <h6>High Tier</h6>
            <div class="flex sponsor-high-tier">
                <div class="sponsor-image">
                    <a href="{{ sponsor.link }}" target="_blank noopenner">
                        <img
                            id="{{sponsor.name | slugify}}-image"
                            class="sponsor-platinum"
                            src="{{ sponsor.image }}"
                            alt="Platinum Tier logo" />
                    </a>
                  </div>

                <div class="sponsor-image">
                    <a href="{{ sponsor.link }}" target="_blank noopenner">
                        <img
                            id="{{sponsor.name | slugify}}-image"
                            class="sponsor-gold"
                            src="{{ sponsor.image }}"
                            alt="Gold Tier logo" />
                    </a>
                </div>
            </div>

            <h6>Medium Tier</h6>
            <div class="flex sponsor-medium-tier">

                <div class="sponsor-image">
                    <a href="{{ sponsor.link }}" target="_blank noopenner">
                        <img
                            id="{{sponsor.name | slugify}}-image"
                            class="sponsor-silver"
                            src="{{ sponsor.image }}"
                            alt="Silver Tier logo" />
                    </a>
                </div>
            </div>

            <h6>Low Tier</h6>
            <div class="flex">
                <div class="sponsor-image">
                     <a href="{{ sponsor.link }}" target="_blank noopenner">
                        <img
                            id="{{sponsor.name | slugify}}-image"
                            class="sponsor-money"
                            src="{{ sponsor.image }}"
                            alt="Money Tier logo" />
                        </a>
                </div>
            </div>

            <div class="flex">
                <div class="sponsor-image">
                    <a href="{{ sponsor.link }}" target="_blank noopenner">
                        <img
                            id="{{sponsor.name | slugify}}-image"
                            class="sponsor-prize"
                            src="{{ sponsor.image }}"
                            alt="Prize Tier logo" />
                    </a>
                </div>
            </div>
        </div>
      
        <div class="partner-list">
            <h2 class="text-xl text-center"> Partners </h2>
        
            <div class="container flex">
                <div class="sponsor-image">
                  <a href="{{ sponsor.link }}" target="_blank noopener">
                    <img
                      id="{{ sponsor.name | slugify }}-image"
                      class="sponsor-partner"
                      src="{{ sponsor.image }}"
                      alt="Partner logo" />
                  </a>
                </div>
            </div>
        </div>
        <div class="container">
            <h2 class="text-xl text-center"> Organized By </h2>
        </div>
      
        <div class="flex">
            <div class="sponsor-image">
                <a href="https://acmatuc.org/" target="_blank">
                    <picture>
                        <source
                            class="sponsor-image--acm@uc"
                            srcset=""
                            type="image/webp" />
                        <img
                        class="acm-logo"
                        src="/img/sponsors/acmatuc.svg"
                        alt="ACM@UC logo" />
                    </picture>
                </a>
            </div>
        </div>
    </section>
    </div>

        <section>
            <div class="container call-to-action pb-20">
                <p class="lead">Interested in sponsoring RevolutionUC? It's a great way to connect with talented and motivated students!
                                Send us an email at
                                <u><a href="mailto:sponsor@revolutionuc.com" class="">sponsor@revolutionuc.com</a></u>  
                                for information.
                </p>
            </div>
        </section>
        
    <Footer />
</HTMLWrapper>