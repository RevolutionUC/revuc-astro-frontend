---
interface Props {
  imgSrc: string;
  imgAlt: string;
}

const { imgSrc, imgAlt }: Props = Astro.props;
---

<img
  src={imgSrc}
  alt={imgAlt}
  class="object-cover rounded-xl w-11/12 md:max-w-3xl md:h-[450px] h-[300px] drop-shadow-md"
  decoding="async"
  loading="eager"
  onerror="this.style.display='none'"
/>
