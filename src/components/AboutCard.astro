---
interface Props {
  title: string;
  description: string;
  imgSrc: string;
  imgAlt: string;
  color: string;
}

const { title, description, imgSrc, imgAlt, color }: Props = Astro.props;
---

<div class="flex flex-col w-full md:w-1/3 h-full">
  <div class="flex flex-col items-center justify-center space-y-2 p-4 rounded-xl text-white" style={`background-color: ${color};`}>
    <h3 class="text-2xl font-bold">{title}</h3>
    <p>{description}</p>
    <img src={imgSrc} alt={imgAlt} class="h-auto w-32 object-cover" onerror="this.style.display='none'"/>
  </div>
</div>
