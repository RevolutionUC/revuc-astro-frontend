<div id="hero" class="h-screen flex flex-col justify-center items-center space-y-4 bg-black overflow-hidden">
    <div id="inner-wrapper">
        <div id="landscape"></div>
    </div>
</div>

<style is:inline>
    #hero {
        -webkit-font-smoothing: antialiased;
        background: #111;
        background: linear-gradient(#0c141f 43%, #d80368 50%, #f75c03 60%);
    }
    #inner-wrapper {
        width: 100%;
        height: 100%;
        margin: 0 auto;
        perspective: 180px;
        perspective-origin: 50% 50%;
    }
    #landscape {
        position: absolute;
        width: 200%;
        left: -50%;
        height: 130%;
        bottom: -30%;
        background-image: -webkit-linear-gradient(top, #d80368 2px, transparent 2px), -webkit-linear-gradient(left, #d80368 2px, transparent 2px);
        background-size: 50px 50px, 80px 80px;
        background-position: -1px -1px<fd, -1px -1px;
        transform: rotateX(85deg);
        animation: moveUp 1s infinite linear;
    }
    @keyframes moveUp{
        0% {
            background-position: -1px -1px, -1px -1px;
        }
        100% {
            background-position: -50px -50px, -1px -1px;
        }
    }
</style>